{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ProjectMetadata": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+(-.*)?$"
        },
        "technologies": {
          "$ref": "#/definitions/TechnologyStack"
        },
        "architecture": {
          "$ref": "#/definitions/ArchitecturePattern"
        },
        "conventions": {
          "$ref": "#/definitions/CodingStandards"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["name", "description", "version", "technologies", "lastUpdated"],
      "additionalProperties": false
    },
    "OnboardingSession": {
      "type": "object",
      "properties": {
        "sessionId": {
          "type": "string",
          "format": "uuid"
        },
        "userId": {
          "type": "string",
          "minLength": 1
        },
        "userType": {
          "type": "string",
          "enum": ["human", "agent"]
        },
        "developerRole": {
          "type": "string",
          "enum": ["frontend", "backend", "devops", "fullstack"]
        },
        "startTime": {
          "type": "string",
          "format": "date-time"
        },
        "lastActivity": {
          "type": "string",
          "format": "date-time"
        },
        "currentStep": {
          "type": "string"
        },
        "completedSteps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "isComplete": {
          "type": "boolean"
        }
      },
      "required": ["sessionId", "userId", "userType", "startTime", "lastActivity", "currentStep", "completedSteps", "isComplete"],
      "additionalProperties": true
    },
    "TechnologyStack": {
      "type": "object",
      "properties": {
        "runtime": {
          "type": "string"
        },
        "language": {
          "type": "string"
        },
        "framework": {
          "type": "string"
        },
        "database": {
          "type": "string"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["runtime", "language", "framework", "dependencies"],
      "additionalProperties": false
    },
    "ArchitecturePattern": {
      "type": "object",
      "properties": {
        "pattern": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "components": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["pattern", "description", "components"],
      "additionalProperties": false
    },
    "CodingStandards": {
      "type": "object",
      "properties": {
        "styleGuide": {
          "type": "string"
        },
        "linting": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "formatting": {
          "type": "string"
        },
        "testing": {
          "type": "string"
        }
      },
      "required": ["styleGuide", "linting", "formatting", "testing"],
      "additionalProperties": false
    }
  }
}